{% extends "::base.html.twig" %}

{% block title %}FormationBundle:Etudiant:ajouterEtudiant{% endblock %}

{% block body %}
    <section class="pt-50">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="title">
                        <h1>Formulaire d'ajout</h1>
                    </div>
                </div>
            </div>

            <div class="row">

                    {{ form_start(form,{'attr':{'class':'fomulaire_etd col'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group row">
                        {{ form_label(form.cin,"CIN",{'label_attr':{'class':'col-2 col-form-label'}}) }}
                        {{ form_errors(form.cin) }}
                        <div class="col-10">
                            {{ form_widget(form.cin,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.nom,"Nom",{'label_attr':{'class':'col-2 col-form-label'}}) }}
                        {{ form_errors(form.nom) }}
                        <div class="col-10">
                            {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.prenom,"Prénom",{'label_attr':{'class':'col-2 col-form-label'}}) }}
                        {{ form_errors(form.prenom) }}
                        <div class="col-10">
                            {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.dateNaissance,"Date de naissance",{'label_attr':{'class':'col-2 col-form-label'}}) }}
                        {{ form_errors(form.dateNaissance) }}
                        <div class="col-10">
                            {{ form_widget(form.dateNaissance,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.adresse,"Adresse",{'label_attr':{'class':'col-2 col-form-label'}}) }}
                        {{ form_errors(form.adresse) }}
                        <div class="col-10">
                            {{ form_widget(form.adresse,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">

                        {{ form_label(form.telephone,"Téléphone",{'label_attr':{'class':'col-2 col-form-label'}}) }}
                        {{ form_errors(form.telephone) }}
                        <div class="col-10">
                            {{ form_widget(form.telephone,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.email,"E-mail",{'label_attr':{'class':'col-2 col-form-label'}}) }}
                        {{ form_errors(form.email) }}
                        <div class="col-10">
                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.ajouter, {'attr': {'class': 'button_add'}}) }}
                    </div>

                    {{ form_end(form) }}



            </div>

        </div>
    </section>
{% endblock %}
